@inherits LayoutComponentBase
@layout Shared.MainLayout

<div class="container py-6">
    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar Navigation -->
        <aside class="lg:w-64 shrink-0">
            <nav class="sticky top-20 space-y-1">
                <h4 class="font-semibold mb-3">Showcase</h4>
                <NavLink href="/showcase/buttons" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="mouse-pointer-click" Size="16" />
                    Buttons
                </NavLink>
                <NavLink href="/showcase/cards" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="square" Size="16" />
                    Cards
                </NavLink>
                <NavLink href="/showcase/forms" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="text-cursor-input" Size="16" />
                    Forms
                </NavLink>
                <NavLink href="/showcase/dialogs" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="panel-top" Size="16" />
                    Dialogs
                </NavLink>
                <NavLink href="/showcase/alerts" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="bell" Size="16" />
                    Alerts
                </NavLink>
                <NavLink href="/showcase/navigation" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="navigation" Size="16" />
                    Navigation
                </NavLink>
                <NavLink href="/showcase/data-display" class="flex items-center gap-2 rounded-md px-3 py-2 text-sm hover:bg-accent" ActiveClass="bg-accent">
                    <LucideIcon Name="table" Size="16" />
                    Data Display
                </NavLink>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 min-w-0">
            @Body
        </main>
    </div>
</div>
