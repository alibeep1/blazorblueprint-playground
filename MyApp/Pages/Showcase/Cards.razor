@page "/showcase/cards"
@layout _ShowcaseLayout

<PageTitle>Cards - Showcase</PageTitle>

<div class="space-y-8">
    <div>
        <h1 class="text-3xl font-bold tracking-tight">Cards</h1>
        <p class="text-muted-foreground mt-2">
            Displays a card with header, content, and footer.
        </p>
    </div>

    <!-- Basic Card -->
    <BbCard>
        <BbCardHeader>
            <BbCardTitle>Basic Card</BbCardTitle>
            <BbCardDescription>A simple card with all sections.</BbCardDescription>
        </BbCardHeader>
        <BbCardContent>
            <BbCard class="w-full max-w-sm">
                <BbCardHeader>
                    <BbCardTitle>Card Title</BbCardTitle>
                    <BbCardDescription>Card description goes here.</BbCardDescription>
                </BbCardHeader>
                <BbCardContent>
                    <p>This is the main content of the card. You can put any content here.</p>
                </BbCardContent>
                <BbCardFooter>
                    <BbButton>Action</BbButton>
                </BbCardFooter>
            </BbCard>
        </BbCardContent>
    </BbCard>

    <!-- Card Grid -->
    <BbCard>
        <BbCardHeader>
            <BbCardTitle>Card Grid</BbCardTitle>
            <BbCardDescription>Cards arranged in a responsive grid layout.</BbCardDescription>
        </BbCardHeader>
        <BbCardContent>
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <BbCard>
                    <BbCardHeader class="pb-2">
                        <LucideIcon Name="rocket" Size="24" class="text-primary mb-2" />
                        <BbCardTitle class="text-lg">Fast</BbCardTitle>
                    </BbCardHeader>
                    <BbCardContent>
                        <p class="text-sm text-muted-foreground">
                            Built with performance in mind. Blazor's efficient rendering keeps your app snappy.
                        </p>
                    </BbCardContent>
                </BbCard>
                <BbCard>
                    <BbCardHeader class="pb-2">
                        <LucideIcon Name="shield-check" Size="24" class="text-primary mb-2" />
                        <BbCardTitle class="text-lg">Secure</BbCardTitle>
                    </BbCardHeader>
                    <BbCardContent>
                        <p class="text-sm text-muted-foreground">
                            Type-safe components with full IntelliSense. Catch errors at compile time.
                        </p>
                    </BbCardContent>
                </BbCard>
                <BbCard>
                    <BbCardHeader class="pb-2">
                        <LucideIcon Name="palette" Size="24" class="text-primary mb-2" />
                        <BbCardTitle class="text-lg">Beautiful</BbCardTitle>
                    </BbCardHeader>
                    <BbCardContent>
                        <p class="text-sm text-muted-foreground">
                            shadcn/ui inspired design. Looks great out of the box, fully customizable.
                        </p>
                    </BbCardContent>
                </BbCard>
            </div>
        </BbCardContent>
    </BbCard>

    <!-- Interactive Card -->
    <BbCard>
        <BbCardHeader>
            <BbCardTitle>Interactive Card</BbCardTitle>
            <BbCardDescription>Cards with interactive elements.</BbCardDescription>
        </BbCardHeader>
        <BbCardContent>
            <div class="grid gap-4 sm:grid-cols-2">
                <BbCard>
                    <BbCardHeader>
                        <div class="flex items-center gap-4">
                            <BbAvatar>
                                <BbAvatarFallback>JD</BbAvatarFallback>
                            </BbAvatar>
                            <div>
                                <BbCardTitle class="text-base">John Doe</BbCardTitle>
                                <BbCardDescription>Software Engineer</BbCardDescription>
                            </div>
                        </div>
                    </BbCardHeader>
                    <BbCardContent>
                        <p class="text-sm text-muted-foreground">
                            Building amazing things with Blazor and BlazorBlueprint. Love the developer experience!
                        </p>
                    </BbCardContent>
                    <BbCardFooter class="gap-2">
                        <BbButton Size="ButtonSize.Small">Follow</BbButton>
                        <BbButton Size="ButtonSize.Small" Variant="ButtonVariant.Outline">Message</BbButton>
                    </BbCardFooter>
                </BbCard>

                <BbCard>
                    <BbCardHeader>
                        <BbCardTitle>Notifications</BbCardTitle>
                        <BbCardDescription>Manage your notification preferences.</BbCardDescription>
                    </BbCardHeader>
                    <BbCardContent class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div class="space-y-0.5">
                                <BbLabel>Email notifications</BbLabel>
                                <p class="text-sm text-muted-foreground">Receive emails about activity.</p>
                            </div>
                            <BbSwitch />
                        </div>
                        <BbSeparator />
                        <div class="flex items-center justify-between">
                            <div class="space-y-0.5">
                                <BbLabel>Push notifications</BbLabel>
                                <p class="text-sm text-muted-foreground">Receive push notifications.</p>
                            </div>
                            <BbSwitch Checked="true" />
                        </div>
                    </BbCardContent>
                </BbCard>
            </div>
        </BbCardContent>
    </BbCard>
</div>
